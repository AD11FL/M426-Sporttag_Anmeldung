@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meine ASP.NET-Anwendung</title>
    <link href="@Url.Content("~/Content/css/login.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/fonts/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/fonts/iconic/css/material-design-iconic-font.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/login.js")"></script>
    <script language="C#" runat="server">

        void SubmitBtn_Click(Object sender, EventArgs e)
        {
           Message.Text="Hello World!!";
        }

    </script>
</head>
<body>
    <div class="limiter">
        <div class="container-login">
            <div class="wrap-login">
                <form class="login-form validate-form" method="post">
                    <img src="~/Content/Images/logo_tbz.png" class="img-fluid" />
                    <span class="title">
                        Anmeldung Sporttag
                    </span>

                    <div class="wrap-input validate-input" data-validate="Gültige E-Mail ist: a@b.c">
                        <input id="user-id" class="input" name="email" type="email">
                        <span class="focus-input" data-placeholder="TBZ E-Mail"></span>
                    </div>

                    <div class="wrap-input validate-input" data-validate="Passwort eingeben">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        <input id="pw-id" class="input" name="password" type="password">
                        <span class="focus-input" data-placeholder="Passwort"></span>
                    </div>

                    <div class="container-login-form-btn">
                        <div class="wrap-login-form-btn">
                            <div class="login-form-bgbtn"></div>

                            <input type="button" class="login-form-btn" value="Login" onclick="location.href='@Url.Action("Schueler", "Home")'" />


                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="container-background"></div>
    </div>
</body>
</html>